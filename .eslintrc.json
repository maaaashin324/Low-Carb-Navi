{
  "env": {
    "es6": true,
    "node": true,
    "browser": true,
    "mocha": true,
    "jest": true
  },
  "extends": "airbnb",
  "rules": {
    "indent": [
      "error",
      2
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ],
    "no-console": 0,
    "jsx-a11y/label-has-for": [ 1, {
      "components": [ "Label" ],
      "required": {
          "every": [ "nesting", "id" ]
      },
      "allowChildren": false
    }]
  },
  "parser": "babel-eslint"
}